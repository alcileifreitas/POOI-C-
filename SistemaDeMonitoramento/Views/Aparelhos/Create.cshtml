@model SistemaDeMonitoramento.Models.Aparelhos

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar</h1>

<h4>Aparelhos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Informe o Nome" maxlength="42"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" placeholder="Informe o Modelo" maxlength="20"/>
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select asp-for="Tipo" class="form-control single-select" name="Tipo">
                    <option value="">Selecione o modelo</option>
                    <option value="Lâmpada">Lâmpada</option>
                    <option value="TV">TV</option>
                    <option value="Som">Som</option>
                    <option value="Arcondicionado">Arcondicionado</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
                <a asp-action="Index" class="btn btn-warning btn-lg active btn-sm" role="button" aria-pressed="true" >Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
