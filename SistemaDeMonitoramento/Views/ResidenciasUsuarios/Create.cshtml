@model SistemaDeMonitoramento.Models.ResidenciasUsuarios

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar</h1>

<h4>Residencia de Usuario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResidenciaId" class="control-label"></label>
                <select asp-for="ResidenciaId" class ="form-control" asp-items="@(new SelectList(ViewBag.Residencia, "ResidenciaId", "CEP"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class ="form-control" asp-items="@(new SelectList(ViewBag.Usuario, "UsuarioId", "CPF"))"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm"/>
                <a asp-action="Index" class="btn btn-warning btn-lg active btn-sm" role="button" aria-pressed="true">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
