@model SistemaDeMonitoramento.Models.Ambientes

@{
    ViewData["Title"] = "Create";
}

<h1>Registrar</h1>

<h4>Ambientes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" placeholder="Informe o Ambiente" maxlength="42"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AparelhoId" class="control-label"></label>
                <select asp-for="AparelhoId" class="form-control" asp-items="@(new SelectList(ViewBag.Aparelho, "AparelhoId","Nome"))"></select>
                <span asp-validation-for="AparelhoId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" />
                <a asp-action="Index" class="btn btn-warning btn-lg active btn-sm" role="button" aria-pressed="true">Cancelar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
